<!DOCTYPE html>
<html>

<head>
    <title>MonBackOffice</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h1>
        MonBackOffice
    </h1>
    <p>Welcome to MonBackOffice
    </p>
    <a href="/">
        <button>Home</button>
    </a>
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group mr-2" role="group" aria-label="First group">
            <a href="/contact-list?filter=famille">
                <button type="button" class="btn btn-secondary">famille</button>
            </a>
            <a href="/contact-list?filter=amis">
                <button type="button" class="btn btn-secondary">amis</button>
            </a>
            <a href="/contact-list?filter=pro">
                <button type="button" class="btn btn-secondary">pro</button>
            </a>
        </div>
    </div>
    <form action="/contact-list-filter-age" method="POST">
        <input type="text" name="ageMin" id="" placeholder="age min">
        <input type="text" name="ageMax" placeholder="age max">
        <input type="hidden" name="filterMode" value="">
        <button type="submit" class="btn btn-primary">Filter</button>
    </form>

    <% for( let i=0; i < contactList.length; i++ ) { %>
        <br>
        <ul>
            <a href="/update-contact?email=<%= contactList[i].email %>">
                <button>Edit Contact</button>
            </a>
            <a href="/delete-contact?email=<%= contactList[i].email %>">
                <button>Delete Contact</button>
            </a>
            <li>
                <%= contactList[i].nom %>
            </li>
            <li>
                <%= contactList[i].prenom %>
            </li>

            <li>
                <%= contactList[i].email %>
            </li>

            <li>
                <%= contactList[i].age %>
            </li>

            <li>
                <%= contactList[i].relation %>
            </li>
        </ul>
        <% } %>

</body>

</html>