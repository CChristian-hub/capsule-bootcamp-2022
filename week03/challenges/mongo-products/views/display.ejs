<!DOCTYPE html>
<html>
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<head>
    <title>
        Mongo-product
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div>
        <p>
            Filter by:
        </p>
        <form action="/filter" method="POST" class="d-flex flex-column col-2">
            <div>
                <% if (boxChecked) { %>
                    <input type="checkbox" id="accept" name="CeQueTuVeux" value="yes" checked> Available Online
                    <% } else { %>
                        <input type="checkbox" id="accept" name="filterOnline" value="yes"> Available Online
                        <% } %>
            </div>
            <input type="text" name="minStock" class="m-3" placeholder="Enter a minStock">
            <input type="text" name="maxStock" class="m-3" placeholder="Enter a maxStock">
            <input type="text" name="category" class="m-3" placeholder="Enter a category">
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Stock</th>
                <th scope="col">is online</th>
                <th scope="col">Category</th>

            </tr>
        </thead>
        <tbody>
            <% for( let i=0; i < products.length; i++ ) { %>
                <tr>
                    <th scope="row">
                        <%= i + 1 %>
                    </th>
                    <td>
                        <%= products[i].name %>
                    </td>
                    <td>
                        <%= products[i].stock %>
                    </td>
                    <td>
                        <%= products[i].isOnline %>
                    </td>
                    <td>
                        <%= products[i].category %>
                    </td>
                </tr>
                <% } %>

        </tbody>
    </table>
</body>

</html>